<div class="offer-wrap">

  <div class="offer">
    <div class="text">
      <h1><%= @offer.title %></h1>
      <div class="offer_desc">
        <%= @offer.description %>
      </div>
      <div class="cta">
        <% if current_user == @offer.user %>
          <%= link_to "Edit", edit_offer_path(@offer), class: "edit" %>
          <%= link_to "", offer_path(@offer), class: "fa-solid fa-trash-can fa-lg", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <% else %>
          <%= link_to "Make a reservation", new_offer_reservation_path(@offer), class: "add" %>
        <% end %>
      </div>
    </div>

    <div class="image-wrap">
    <% if @offer.photo.key.present? %>
      <%= cl_image_tag @offer.photo.key, class: "photo" %>
    <% else %>
      <%= image_tag "Star.png", alt: "No Star", class: "photo" %>
    <% end %>
      <div class="info-wrap">
        <div class="info">
          <div class="date-block">
            <h2>Available on</h2>
            <div class="offer_date">
              <%= @offer.date.day %>/<%= @offer.date.month %>/<%= @offer.date.year %>
            </div>
          </div>
          <div class="price-block">
            $<%= @offer.price %>
          </div>
        </div>
      </div>
      <div class="border-bottom">
      </div>

    </div>

    <div class="border-right">
    </div>

  </div>

  <% if current_user == @offer.user %>
    <div class="resas">
      <h2>Reservations</h2>
      <% if @offer.reservations.size == 0 %>
        There is no reservation yet.
      <% else %>
        <% @offer.reservations.each do |reservation| %>
          <%= link_to edit_reservation_path(reservation), class: "resa-link" do %>
            <div class="resa">
              <div class="comment">
                <%= reservation.comment %>
              </div>
              <div class="user">
                by <strong>John</strong>
              </div>
              <div class="accepted">
                <% if reservation.accepted %>
                  <i class="fa-solid fa-circle-check yes"></i>
                <% else %>
                  <i class="fa-solid fa-hourglass-half no"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>

</div>
