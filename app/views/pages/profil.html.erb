<div class="profile">
  <div class = "profile-picture">
    <% if @user.photo.key.present? %>
      <%= cl_image_tag @user.photo.key, class: "photo" %>
    <% else %>
      <%= image_tag "Star.png", alt: "No Star", class: "photo" %>
    <% end %>
  </div>
  <div class="profile-info">
    <h1><%= @user.nickname %></h1>
    <p><%= @user.email %></p>
    <p><%= @user.description %></p>
    <p class="history">
      <% @offers_count > 1 ? offers = "offers" : offers = "offer" %>
      <% @reservations_count > 1 ? resas = "reservations" : resas = "reservation" %>
      <% @user == current_user ? have = "have" : have = "has" %>
      <%= @user == current_user ? "You #{ have }" : "#{ @user.nickname } #{ have }"%>
        created <%= @offers_count %> <%= offers %> and <%= have %> <%= @reservations_count %> <%= resas %>.
      </p>
  </div>
  <% if @user == current_user %>
    <%= link_to "Edit profile", edit_user_path(current_user), class: "edit" %>
    <% end %>
</div>
