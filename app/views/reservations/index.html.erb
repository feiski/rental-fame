<div>
  <% if @reservations.present? %>
    <% @reservations.each do |reservation| %>
      <h1><%= reservation.offer.title %></h1>
      <div class="cards_reservations">
        <% if reservation.offer.photo.key.present? %>
          <%= cl_image_tag reservation.offer.photo.key, class: "photo-form" %>
        <% else %>
          <%= image_tag "Star.png", alt: "No Star", class: "photo-form" %>
        <% end %>
        <span><%= reservation.offer.date %></span>
        <br><%= reservation.comment %>
      </div>
      <div class="card_reservation">
        <% if reservation.accepted? %>
        Accepted
        <% else %>
        Pending
        <% end %>
         <%= link_to "Delete this reservation", reservation_path(reservation),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"add" %>
      </div>
      <hr class="separator">
    <% end %>
  <% else %>
    You have no reservations yet
  <% end %>
</div>
