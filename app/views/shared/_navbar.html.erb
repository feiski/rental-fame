<div class="navbar-container">
  <div class="navbar-display">
    <%= link_to root_path do %>
      <%= image_tag image_path("logo.png"), class: "logo" %>
    <% end %>

    <% if user_signed_in? %>
      <div class="nav-button">
        <%= link_to "New offer", new_offer_path(@offer), class: "add" %>
        <%= link_to "My reservations", reservations_path, class: "add" %>
        <%= link_to "My offers", offers_path(show_owned: true), class: "add" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "add" %>
      </div>
      <div class="avatar">
        <%= link_to profil_path do %>
          <%= image_tag "https://loremflickr.com/500/500/faces", class: "avatar" %>
        <% end %>
      </div>
    <% else %>
      <div class="nav-button">
        <%= link_to "Login", new_user_session_path, class: "add" %>
      </div>
    <% end %>
  </div>
</div>



