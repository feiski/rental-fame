<div class="magic_search">
  <%= form_with url: offers_path, method: :get, class: "magic_search-form" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find your fame!"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
